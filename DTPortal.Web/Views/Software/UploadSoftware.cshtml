@model DTPortal.Web.ViewModel.Software.UploadSoftwareViewModel
@using DTPortal.Web.Enums

@{
    ViewData["Title"] = "Upload Software";
}

@{
    await Html.RenderPartialAsync("_AlertBox");
}

<div class="row">
    <div class="col-md-12">
        <div class="card-custom">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-action="UploadSoftware">
                    @*<div id="note">
                    <b>NOTE: </b> (*) Mark fields are mandatory.
                    </div>*@
                    <div class="form-row">
                        <div class="form-group col-md-6" style="float:left;">
                            <div class="form-group col-md-12">
                                <label asp-for="SoftwareName" class="col-form-label"></label>
                                <select asp-for="SoftwareName" asp-items="Html.GetEnumSelectList<SoftwareName>()" class="form-control">
                                    <option value="">Select type</option>
                                </select>
                                <span asp-validation-for="SoftwareName" class="text-danger"></span>
                            </div>
                            @*<div class="form-group col-md-12">
                            <label asp-for="SoftwareZip" class="col-form-label"></label>
                            <div class="custom-file" >
                            <input asp-for="SoftwareZip" class="form-control custom-file-input" accept=".zip">
                            <label class="custom-file-label">Choose File...</label>
                            <span asp-validation-for="SoftwareZip" class="text-danger"></span>
                            </div>
                            </div>*@

                            <div class="form-group col-md-12">
                                <label asp-for="SoftwareZip" class="col-form-label"></label>
                                <div class="custom-file">
                                    <input asp-for="SoftwareZip" class="form-control custom-file-input" accept=".zip">
                                    <label class="custom-file-label" id="softwareZipLabel">Choose File...</label>
                                    <span asp-validation-for="SoftwareZip" class="text-danger"></span>
                                </div>
                            </div>

                        </div>

                        <div class="form-group col-md-6" style="float:left;">
                            <div class="form-group col-md-12">
                                <label asp-for="SoftwareVersion" class="col-form-label"></label>
                                <input asp-for="SoftwareVersion" class="form-control datepicker" type="text" />
                                <span asp-validation-for="SoftwareVersion" class="text-danger"></span>
                            </div>
                          @*  <div class="form-group col-md-12">
                            <label asp-for="Mannual" class="col-form-label"></label>
                            <div class="custom-file">
                                <input asp-for="Mannual" class="form-control custom-file-input" accept=".pdf">
                                <label class="custom-file-label" id="mannualLabel">Choose File...</label>
                                <span asp-validation-for="Mannual" class="text-danger"></span>
                            </div>
                        </div> *@
                        </div>
                    </div>

                    <div class="d-flex justify-content-end ">
                        <input type="submit" class="btn btn-primary greenButton" value="Save" />
                        &nbsp;&nbsp;
                        <a type="button" asp-action="List" class="btn btn-danger">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@*<link href="~/assets/css/jquery-ui.css" rel="stylesheet" type="text/css" asp-append-version="true"/>*@
<link href="~/css/jquery-ui.css" rel="stylesheet" />

@section Scripts {

    @*<script src="//code.jquery.com/jquery-1.12.4.js"></script>*@
    <script src="~/js/jquery-1.12.4.js"></script>
    @*<script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>*@
    <script src="~/js/jquery-ui.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#selfServiceConfigMenu').addClass('active');

            if ($('#sidebar ul li.dropdown.active')) {
                $('#sidebar ul li.dropdown.active ul').addClass('show');
                $('#softwareMenuItem').addClass('active');
                $('#sidebar ul li.dropdown.active a.nav-link.drop-logo').attr('aria-expanded', 'true');
            }

            /*For Breadcrumb Start*/
            $('#homeMenu').addClass('breadcrumb-item').append('Software');
            $('#mainMenu').addClass('breadcrumb-item').append('Upload Software')
            $('#subMenu').removeClass('breadcrumb-item active');
            /*For Breadcrumb End*/

           
            $('#SoftwareZip').change(function (e) {
                var fileName = e.target.files[0].name;
                $('#softwareZipLabel').html(fileName);
            });

            
            $('#Mannual').change(function (e) {
                var fileName = e.target.files[0].name;
                $('#mannualLabel').html(fileName);
            });
        });
    </script>

}


