@model List<DTPortal.Web.ViewModel.CredentialApproval.CredentialListViewModel>

@{
    ViewData["Title"] = "Credential Approvals";
}

@{
    await Html.RenderPartialAsync("_AlertBox");
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body ">
                <div class="row p-b-20">
                    <div class="col-md-6 col-sm-6 col-6">
                        <div class="btn-group">
                            <a class="btn btn-info" asp-action="Index">
                                <i class="fa fa-refresh"></i>Refresh
                            </a>
                        </div>
                    </div>
                </div>
                <table id="CredentialTable" class="table table-striped table-bordered table-hover table-checkable order-column full-width">
                    <thead>
                        <tr>
                            <th hidden>Id</th>
                            <th>Credential Name</th>
                            <th>Organization Name</th>
                            <th>Authentication Scheme</th>
                            <th>Created Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || Model.Count() == 0)
                        {
                            <tr>
                                <td style="text-align:center" valign="top" colspan="5" class="dataTables_empty">No record found</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                @if (item.status != "PENDING")
                                {
                                    <tr class="odd gradeX">
                                        <td hidden>@item.Id</td>
                                        <td>@item.CredentialName</td>

                                        <td>@item.organizationName</td>
                                        <td>@item.authenticationScheme</td>
                                        <td>@item.createdDate.ToString("yyyy-MM-dd")</td>
                                        <td>@item.status</td>
                                        <td class="valigntop">
                                            <div class="btn-group">
                                                <button class="btn btn-xs deepPink-bgcolor no-margin" type="button" data-toggle="dropdown"
                                                        aria-expanded="false">
                                                    Actions
                                                    <i class="fa fa-angle-down"></i>
                                                </button>
                                                <ul class="dropdown-menu pull-left" role="menu">
                                                    <li>
                                                        <a asp-action="CredentialDetails" asp-route-id="@item.Id">
                                                            <i class="icon-pencil"></i>View
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>

        $(document).ready(function () {
            $('#walletMenu').addClass('active');
            $('#credentialMenuItem').addClass('active');
            $('#credentialMenuItem').addClass('active');

            $('#walletConfig').addClass('show');
            $('#walletConfig').addClass('show');

            $("li#walletMenu a:first").attr('aria-expanded', 'true');
            $("li#credentialMenuItem a:first").attr('aria-expanded', 'true');

            /*For Beadcrum Start*/
            $('#homeMenu').addClass('breadcrumb-item').append(' Digital Wallet');
            $('#mainMenu').addClass('breadcrumb-item active').append('Credential Approval List');
            $('#subMenu').removeClass('breadcrumb-item');

            var table = $("#CredentialTable").DataTable({
                "bLengthChange": false,
                "searching": true,
                "ordering": true,
                "order": [[0, "desc"]]
            });
        });
    </script>
}