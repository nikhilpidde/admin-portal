@model IEnumerable<DTPortal.Core.DTOs.SubscriberPaymentHistoryDTO>

@{
    ViewData["Title"] = "Subscriber Payment Historys";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-bordered table-hover table-checkable order-column full-width">
                    <thead>
                        <tr>
                            <td>Payment Channel</td>
                            <td>Total Amount</td>
                            <td>Transaction Reference Id</td>
                            <td>Aggregator Acknowledgement Id</td>
                            <td>Payment Status</td>
                            <td>Created Date</td>
                            <td>Payment Info</td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @if (!String.IsNullOrEmpty(item.PaymentChannel))
                                    {
                                        <td>@item.PaymentChannel</td>
                                    }
                                    else
                                    {
                                        <td>N/A</td>
                                    }
                                    @if (item.TotalAmount != 0)
                                    {
                                        <td>@item.TotalAmount</td>
                                    }
                                    else
                                    {
                                        <td>N/A</td>
                                    }
                                    @if (!String.IsNullOrEmpty(item.TransactionReferenceId))
                                    {
                                        <td>@item.TransactionReferenceId</td>
                                    }
                                    else
                                    {
                                        <td>N/A</td>
                                    }
                                    @if (!String.IsNullOrEmpty(item.AggregatorAcknowledgementId)){
                                        <td>@item.AggregatorAcknowledgementId</td>
                                    }
                                    else
                                    {
                                        <td>N/A</td>
                                    }          
                                    @if (!String.IsNullOrEmpty(item.PaymentStatus)){
                                        <td>@item.PaymentStatus</td>
                                    }
                                    else
                                    {
                                        <td>N/A</td>
                                    }
                                    <td>@item.CreatedOn</td>
                                    <td style="text-align:center;"><i class="fa fa-info-circle" title="More info" aria-hidden="true" onclick="showPaymentInfo('@item.PaymentInfo')"></i></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="odd gradeX">
                                <td colspan="6" align="center">No records found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var table = $(".table").DataTable({
            "bLengthChange": false,
        });
    });

    function showPaymentInfo(paymentInfo) {
        var dataToSend = { paymentInfo: paymentInfo };
        $.ajax({
            url: '@Url.Action("GetPaymentInfo", "SubscriberPaymentHistory")',
            data: dataToSend,
            type: "GET",
            /*contentType: "json",*/
            error: ajaxErrorHandler,
            beforeSend: function () {
                $('#overlay').show();
            },
            complete: function () {
                $('#overlay').hide();
            },
            success: function (data) {
                if (data != null) {
                    $('#modalDialogContentDiv').html(data);
                    $('#modalDialogDiv').modal('show');
                }
                else {
                    swal({ type: 'error', title: "Error", text: "Failed to get payment info" });
                }
            }
        });
    }
</script>