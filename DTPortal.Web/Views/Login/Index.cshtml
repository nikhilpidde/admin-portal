@using Microsoft.AspNetCore.Html
@using System.Text.Json

@{
    ViewData["Title"] = "Login Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/sweetalert.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome-4.7.0/css/font-awesome.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        /* Base Styles & Centering */
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            background-color: #f4f7f6;
        }

        #controls-container {
            display: flex;
            justify-content: center;
           
            
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .dialog-overlay {
            position: fixed;
            inset: 0;
            display: flex;
            background-image: url('@Url.Content("~/assets/UAEID/uaeid-bg.png")');
            align-items: center;
            justify-content: center;
            background-size: cover;
            z-index: 50;
        }

        .dialog-card {
            width: 780px;
            max-height: 90%;
            overflow-y: auto;
            min-height: 440px;
            display: flex;
            background: #ffffff;
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid rgba(0, 0, 0, 0.1);
            box-shadow: 5px 9px 23px 0px rgba(97, 96, 61, 0.09), 19px 37px 41px 0px rgba(97, 96, 61, 0.07);
        }

        /* LEFT PANEL: Branding */
        .dialog-left {
            width: 45%;
         
            background: linear-gradient( 135deg, #f3f8de 0%, #fbfcf6 50%, #f3f8de 100% );
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            border-right: 1px solid rgba(0, 0, 0, 0.05);
        }

        .uaeid-logo {
            width: auto;
            height: 40px;
            object-fit: contain;
            margin-bottom: 24px;
        }

        .dialog-left h3 {
            font-size: 35px;
            font-weight: 300;
            color: #1a1a1a;
            line-height: 1.3;
            margin-top: -41px;
        }

        .gov-text {
            font-size: 13px;
            color: #565B63;
            display: flex;
            align-items: center;
            gap: 2px;
        }

        /* RIGHT PANEL: Form Area */
        .dialog-right-container {
            width: 55%;
            padding: 30px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .login-box {
            max-width: 400px;
            width: 100%;
            margin: 0 auto;
        }

            .login-box h1 {
                font-size: 28px;
                font-weight: 700;
                color: #1a1a1a;
                margin-bottom: 8px;
            }

            .login-box p.subtitle {
                color: #666;
                font-size: 15px;
                margin-bottom: 30px;
            }

        /* Form Styling */
        .form-group {
            position: relative;
            margin-bottom: 25px;
        }

            .form-group label {
                display: block;
                font-size: 13px;
                font-weight: 600;
                color: #444;
                margin-bottom: 8px;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

        .form-control-custom {
            width: 100%;
            padding: 7px 16px;
            border: 1.5px solid #e1e1e1;
            border-radius: 10px;
            font-size: 15px;
            transition: all 0.2s;
            background: #f9f9f9;
        }

            .form-control-custom:focus {
                outline: none;
                border-color: #987024;
                background: #fff;
                box-shadow: 0 0 0 4px rgba(152, 112, 36, 0.1);
            }

        /* Password Eye Icon */
        .field-icon {
            position: absolute;
            right: 15px;
            top: 42px;
            cursor: pointer;
            color: #999;
            z-index: 2;
        }

        /* Button Styling */
        .btn-submit {
            width: 100%;
            padding: 10px;
            background: #1a1a1a;
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s;
            margin-top: 10px;
        }

            .btn-submit:hover {
                background: #333;
            }

        /* Separator */
        .loginSignUpSeparator {
            text-align: center;
            border-bottom: 1px solid #eee;
            line-height: 0.1em;
            margin: 30px 0;
        }

        .textInSeparator {
            background: #fff;
            padding: 0 15px;
            color: #999;
            font-size: 13px;
        }

        /* Forgot Password link */
        #forgotPassword {
            display: block;
            text-align: center;
            color: #987024;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
        }

            #forgotPassword:hover {
                text-decoration: underline;
            }

        /* Error Message Styling */
        .error-info {
            background: #fff0f0;
            color: #d93025;
            padding: 10px;
            border-radius: 8px;
            font-size: 13px;
            margin-bottom: 20px;
            border-left: 4px solid #d93025;
        }

        /* Mobile Responsiveness */
        @@media (max-width: 768px) {
            .dialog-card {
                flex-direction: column;
                width: 100%;
                max-width: 450px;
                min-height: auto;
            }

            .dialog-left {
                width: 100%;
                padding: 30px;
                border-right: none;
                border-bottom: 1px solid #eee;
                text-align: center;
            }

                .dialog-left h3 {
                    font-size: 22px;
                    margin-top: 20px;
                }

            .dialog-right-container {
                width: 100%;
                padding: 40px 25px;
            }

            .uaeid-logo {
                margin: 0 auto;
            }

            .gov-text {
                justify-content: center;
                margin-top: 20px;
            }
        }

        /* Loading Spinner */
        #overlay {
            position: fixed;
            top: 0;
            z-index: 10000;
            width: 100%;
            height: 100%;
            display: none;
            background: rgba(0,0,0,0.6);
        }

        .cv-spinner {
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 4px #ddd solid;
            border-top: 4px #987024 solid;
            border-radius: 50%;
            animation: sp-anime 0.8s infinite linear;
        }

        @@keyframes sp-anime {
            100% {
                transform: rotate(360deg);
            }
        }

    </style>
</head>
<body>

    <div id="overlay">
        <div class="cv-spinner">
            <span class="spinner"></span>
        </div>
    </div>

    <div class="dialog-overlay">
        <div class="dialog-card">

            <!-- LEFT PANEL: BRANDING -->
            <div class="dialog-left">
                <div class="brand">
                    <img src="@Url.Content("~/assets/UAEID/uaeid-mini-logo.png")" alt="UAEID" class="uaeid-logo d-flex justify-content-center justify-content-sm-start" />
                    <h3 class="d-none d-sm-block"><br><span style="font-weight:600;">Admin Portal</span></h3>
                    <h3 class="d-block text-center d-sm-none"><span style="font-weight:600;">Admin Portal</span></h3>
                </div>

                <p class="gov-text d-none d-sm-flex align-items-center mb-0">
                    <svg class="me-1" width="16" height="16" viewBox="0 0 24 24" fill="none"
                         xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2L4 5V11C4 16.25 7.33 20.74 12 22C16.67 20.74 20 16.25 20 11V5L12 2Z"
                              fill="#1FAF38" />
                        <path d="M10.5 13.5L8.5 11.5L7.5 12.5L10.5 15.5L16.5 9.5L15.5 8.5L10.5 13.5Z"
                              fill="white" />
                    </svg>
                    <span class="pl-1">
                        Official Secure Government Portal
                    </span>
                </p>
            </div>

            <!-- RIGHT PANEL: FORM -->
            <div class="dialog-right-container">
                <div class="login-box">
                    <h1>Sign in</h1>
                    <p class="subtitle">Enter your credentials to access your account</p>

                    <form id="PASSWORDForm" novalidate>
                        <div id="PASSWORDerror" class="error-info" style="display: none;">
                            <!-- Error message goes here -->
                        </div>

                        <!-- Email Input -->
                        <div class="form-group">
                            <label for="PASSWORDuserName">Email Address</label>
                            <input type="email" id="PASSWORDuserName" name="PASSWORDuserName" class="form-control-custom" placeholder="Email" required />
                        </div>

                        <!-- Password Input -->
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" class="form-control-custom" placeholder="password" required />
                            <span toggle="#password" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        </div>

                        <input id="PASSWORDauthScheme" name="authScheme" type="hidden" value="PASSWORD">
                        <input type="hidden" id="authUrl" value="@Url.Action("AuthenticatUser", "Login")" />

                        <!-- Submit Button -->
                        <button class="btn-submit" type="button" id="checkPassword">
                            Sign In
                        </button>

                        <div class="loginSignUpSeparator">
                            <span class="textInSeparator">OR</span>
                        </div>

                        @* <a href="javascript:void(0);" id="forgotPassword" onclick="ForgotPassword();">Forgot Password?</a> *@
                    </form>
                </div>
            </div>

        </div>
    </div>

    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sweetalert.min.js"></script>
    <script src="~/lib/loginJsCss/login.js"></script>

    <script>
        $(document).ready(function() {
            // Toggle Password Visibility
            $(".toggle-password").click(function() {
                $(this).toggleClass("fa-eye fa-eye-slash");
                var input = $($(this).attr("toggle"));
                if (input.attr("type") == "password") {
                    input.attr("type", "text");
                } else {
                    input.attr("type", "password");
                }
            });
        });
    </script>

</body>
</html>