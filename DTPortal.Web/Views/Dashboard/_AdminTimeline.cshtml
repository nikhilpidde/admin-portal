@model IEnumerable<DTPortal.Core.DTOs.AdminActivity>

<style>
    #project-timeline-container {
        color: #4b5356;
        height: 794px;
        position: relative;
        margin-bottom: 12px;
        overflow-x: hidden;
    }
</style>

    <div id="project-timeline-container" class="ps">
        <div class="card-body pt-5">
            <div class="timeline-label">
                @if (Model != null)
                {
                    foreach (var log in Model)
                    {
                        string date;
                        string time;
                        {
                            var timeStamp = Convert.ToDateTime(log.Timestamp);
                            if (timeStamp.Date == DateTime.Today.Date)
                            {
                                date = "Today";
                                time = timeStamp.ToString("hh:mm tt");
                            }
                            else if (timeStamp.Date == DateTime.Today.AddDays(-1).Date)
                            {
                                date = "Yesterday";
                                time = timeStamp.ToString("hh:mm tt");
                            }
                            else
                            {
                                date = timeStamp.ToString("dd-MM-yyyy");
                                time = timeStamp.ToString("hh:mm tt");
                            }
                        }

                        <div class="timeline-item">
                            <div class="column"
                                 style="text-align: end; padding: 0px 15px; margin-left: -15px">
                                <div class="fw-bolder text-gray-800 fs-6" style="min-width:90px">@date</div>
                                <div class="fw-bolder text-gray-800 fs-6" style="min-width:90px">@time</div>
                            </div>
                            <div class="timeline-badge">
                                <i class="fa fa-genderless text-primary fs-1"></i>
                            </div>
                            <div class="fw-mormal timeline-content text-muted ps-3">
                                <div class="timeline-content text-gray-500 ps-3">@log.UserName</div>
                                <div class="timeline-conten text-muted ps-3">
                                    @log.LogMessage
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
