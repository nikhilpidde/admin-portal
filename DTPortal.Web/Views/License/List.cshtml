@model DTPortal.Web.ViewModel.License.LicenseListViewModel

@{
    ViewData["Title"] = "Licenses";
}

@{
    await Html.RenderPartialAsync("_AlertBox");
}

<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-body ">
                <div class="row p-b-20" style="display: flex; align-items: center;">
                    <div class="btn-group">
                        <a class="btn btn-info greenButton" asp-controller="License" asp-action="List">
                            <i class="fa fa-refresh"></i>Refresh
                        </a>
                    </div>
                </div>

                <table class="table table-striped table-bordered table-hover table-checkable order-column full-width">
                    <thead>
                        <tr>
                            <th>Organization Name</th>
                            <th>Software Name</th>
                            <th>License Type</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LicenseList)
                        {
                            <tr class="odd gradeX">
                                <td>@item.OrganizationName</td>
                                <td>@item.Appid</td>
                                @if (item.LicenseType == "PROD")
                                {
                                    <td>Production</td>
                                }
                                else if (item.LicenseType == "TRIAL")
                                {
                                    <td>Trial</td>
                                }
                                else
                                {
                                    <td>Commercial</td>
                                }
                                <td>@item.LicenceStatus</td>
                                <td class="valigntop" align="center">
                                    <div class="btn-group">
                                        <button class="btn btn-xs deepPink-bgcolor no-margin greenButton" type="button" data-toggle="dropdown"
                                            aria-expanded="false">
                                            Actions
                                            <i class="fa fa-angle-down"></i>
                                        </button>
                                        <ul class="dropdown-menu pull-left" role="menu">
                                            @if (item.LicenceStatus != "ACTIVE")
                                            {
                                                <li>
                                                    <a asp-action="GenerateLicense" asp-route-orgId="@item.Ouid" asp-route-licenseType="@item.LicenseType" asp-route-applicationName="@item.ApplicationName">
                                                        <i class="icon-pencil"></i>Generate License
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--TABLE CONTENT END-->
@section scripts{
    <script>
        $(document).ready(function () {
            $('#selfServiceConfigMenu').addClass('active');

            if ($('#sidebar ul li.dropdown.active')) {
                $('#sidebar ul li.dropdown.active ul').addClass('show');
                $('#licenseMenuItem').addClass('active');
                $('#sidebar ul li.dropdown.active a.nav-link.drop-logo').attr('aria-expanded', 'true');
            }

            /*For Breadcrumb Start*/
            $('#homeMenu').addClass('breadcrumb-item').append('Self Service Portal');
            $('#mainMenu').addClass('breadcrumb-item active').append("License");
            $('#subMenu').removeClass('breadcrumb-item active');
            /*For Breadcrumb End*/

            var table = $(".table").DataTable({
                "bLengthChange": false,
            });
        });
    </script>
}