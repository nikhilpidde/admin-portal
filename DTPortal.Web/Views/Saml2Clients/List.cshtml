@model IEnumerable<DTPortal.Web.ViewModel.Saml2Clients.Saml2ClientsListViewModel>
@{
    ViewData["Title"] = "Saml2 List";
}
@{await Html.RenderPartialAsync("_AlertBox");}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body ">
                <div class="row p-b-20">
                    <div class="col-md-6 col-sm-6 col-6">


                        @if (!User.IsInRole("Saml2 Checker"))
                        {
                            <div class="btn-group">
                                <a id="addRow1" asp-action="New" class="btn btn-info"><i class="fa fa-plus"></i>Add</a>
                            </div>

                        }
                        <div class="btn-group">
                            <a class="btn btn-info" asp-action="List">
                                <i class="fa fa-refresh"></i>Refresh
                            </a>
                        </div>
                    </div>

                </div>
                <table id="saml2clientTable" class="table table-striped table-bordered table-hover table-checkable order-column full-width">
                    <thead>
                        <tr>
                            <th>Application Name</th>
                            <th>Application Type</th>
                            <th>Application Url</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || Model.Count() == 0)
                        {
                            <tr>
                                <td style="text-align:center" valign="top" colspan="5" class="dataTables_empty">No record found</td>
                            </tr>

                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">

                                    <td>@item.ApplicationName</td>
                                    <td>@item.ApplicationType</td>
                                    <td>@item.ApplicationUri</td>
                                    <td>@item.State</td>

                                    <td class="valigntop">
                                        @if (!User.IsInRole("Saml2 Checker"))
                                        {
                                            <div class="btn-group">
                                                <button class="btn btn-xs deepPink-bgcolor no-margin" type="button" data-toggle="dropdown"
                                                        aria-expanded="false">
                                                    Actions
                                                    <i class="fa fa-angle-down"></i>
                                                </button>
                                                <ul class="dropdown-menu pull-left" role="menu">
                                                    <li>
                                                        <a asp-action="Edit" asp-route-id="@item.Id">
                                                            <i class="icon-pencil"></i>Edit
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="js-delete" data-id="@item.Id">
                                                            <i class="fa fa-trash"></i>Delete
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="@Url.Action("Session", "Saml2Clients", new { id = item.ClientID,name = item.ApplicationName })">
                                                            <i class="icon-file-text"></i>Session
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        }
                                        else
                                        {

                                            <div class="btn-group">
                                                <button class="btn btn-xs deepPink-bgcolor no-margin" type="button" data-toggle="dropdown"
                                                        aria-expanded="false">
                                                    Actions
                                                    <i class="fa fa-angle-down"></i>
                                                </button>
                                                <ul class="dropdown-menu pull-left" role="menu">
                                                    <li>
                                                        <a href="@Url.Action("Edit", "Saml2Clients", new { id = item.Id })">
                                                            <i class="icon-docs"></i>View
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>

                                        }

                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        $(document).ready(function () {


            $('#digitalAuthSidebarElement').addClass('active');
            $('#OauthSamlSidebarElement').addClass('active');
            $('#SAMLSidebarElement').addClass('active');

            $('#homeSubmenu').addClass('show');
            $('#OauthSamlSubmenu').addClass('show');

            $("li#digitalAuthSidebarElement a:first").attr('aria-expanded', 'true');
            $("li#OauthSamlSidebarElement a:first").attr('aria-expanded', 'true');

            /*For Beadcrum Start*/
            $('#homeMenu').addClass('breadcrumb-item').append('Digital Authentication');
            $('#mainMenu').addClass('breadcrumb-item active').append('Service Providers > SAML2');
            $('#subMenu').removeClass('breadcrumb-item');

            var table = $("#saml2clientTable").DataTable({
                "bLengthChange": false,
                "searching": false
            });

            $('#saml2clientTable').on('click', '.js-delete', function () {
                var deleteButton = $(this);
                var id = deleteButton.attr("data-id");
                swal({
                    title: "Are you sure?",
                    text: "Do you want to delete this record",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "Yes",
                    cancelButtonText: "No",
                    closeOnConfirm: false,
                    closeOnCancel: true
                }, function (isConfirm) {
                    if (isConfirm) {
                    $.ajax({
                        type: 'POST',
                        cache: false,
                        dataType: 'json',
                        url: '@Url.Action("Delete", "Saml2Clients")',
                        data: {
                             id: id
                        },
                        beforeSend: function () {
                            $('#overlay').show();
                        },
                        complete: function () {
                            $('#overlay').hide();
                        },
                        success: function () {
                            window.location.reload();
                        },
                        error: ajaxErrorHandler
                    });
                    }
                    else {
                        return false;
                    }
                });
            });
        });

    </script>
}

