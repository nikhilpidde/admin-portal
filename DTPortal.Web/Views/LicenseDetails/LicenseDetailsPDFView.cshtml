@model DTPortal.Web.ViewModel.LicenseDetails.LicenseDetailsPDFViewModel

@using System.Globalization

<style>
    .logo {
        width: 100%;
        height: 150px;
        text-align: center;
    }

    .header {
        text-align: center;
        color: green;
        padding-bottom: 35px;
    }

    table {
        width: 80%;
        border-collapse: collapse;
    }

    td, th {
        border: 1px solid gray;
        padding: 15px;
        font-size: 22px;
        text-align: center;
    }

    table th {
        background-color: #AEC737;
        color: white;
    }

    .heading {
        width: 450px;
    }
</style>

<div>
    <div class="logo">
        <img style='width:342px;height:93px' src="@Model.PdfLogo" />
    </div>
    <div>
        <table align='center'>
            <tr>
                <th colspan="2" style="text-align:left">Subscribers Certificate Details</th>
            </tr>
            <tr>
                <td class="heading">Total Certificates</td>
                <td>@Model.LicenseDetails.TotalSubscribersCertificates</td>
            </tr>
            <tr>
                <td class="heading">Certificates Issued</td>
                <td>@Model.LicenseDetails.SubscribersCertificatesIssued</td>
            </tr>
            <tr>
                <td class="heading">Certificates Available</td>
                <td>@Model.LicenseDetails.SubscribersCertificatesAvailable</td>
            </tr>
        </table>
    </div>
</div>