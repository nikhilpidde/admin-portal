@model PaginatedList<DTPortal.Core.DTOs.LogReportDTO>

@using DTPortal.Core

<style>
    .modal-dialog {
        max-width: 900px;
    }
</style>

<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title s3">
                <span class="text-capitalize s3" style="font-size: 18px">
                    Onboarding Transactions of @TempData["SubscriberFullName"].ToString()
                </span>
            </h5>
            <button type="button"
                    class="close cross"
                    data-dismiss="modal">
                &times;
            </button>
        </div>
        <div class="modal-body">
            <div class="well">
                <div class="table-wrap">
                    <div class="table-responsive" style="max-height:360px">
                        <table class="table display product-overview mb-30" id="support_table5">
                            <thead>
                                <tr>
                                    <th>Operation</th>
                                    <th>Application Name</th>
                                    <th>Message</th>
                                    <th style="width:80px">Status</th>
                                    <th style="width:80px">Integrity</th>
                                    <th style="width:175px">Duration</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count() > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ServiceName</td>
                                            <td>@item.ServiceProviderAppName</td>
                                            <td>@item.LogMessage</td>
                                            <td>@item.LogMessageType</td>
                                            <td>@(item.IsChecksumValid ? "Valid" : "Invalid")</td>
                                            <td>
                                                @(Convert.ToDateTime(item.StartTime).ToString("dd-MM-yyyy hh:mm:ss tt")) -
                                                @(Convert.ToDateTime(item.EndTime).ToString("dd-MM-yyyy hh:mm:ss tt"))
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" align="center">No records found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-info" id="exportOnboardingReportBtn" type="button">
                Export&nbsp;<i class="fa fa-file-pdf-o"></i>
            </button>
            &nbsp;&nbsp;
            <button class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>

<script>
    $("#exportOnboardingReportBtn").click(function (e) {
        e.preventDefault();
        //exportOnboardingData('excel');
        //exportOnboardingData('csv');
        exportOnboardingData('pdf');
    });

    function exportOnboardingData(exportType) {
        $.ajax({
            type: "GET",
            url: '@Url.Action("ExportSubscriberOnboardingReports", "Subscriber")',
            data: { 'exportType': exportType },
            beforeSend: function () {
                $('#overlay').show();
            },
            complete: function () {
                $('#overlay').hide();
            }
        }).done(function (response) {
            if (response.status == "Success") {
                type = 'success';
            }
            else {
                type = 'error';
            }
            swal({ type: type, title: response.title, text: response.message });
        }).fail(ajaxErrorHandler);
    }
</script>