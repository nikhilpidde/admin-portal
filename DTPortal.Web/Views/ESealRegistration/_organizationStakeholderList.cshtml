@model IEnumerable<DTPortal.Core.DTOs.StakeholderDTO>
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    var clientName = @Configuration["ProjectName"] as string;
}
<style>
    .modal-dialog {
        max-width: 900px;
    }

    .cross {
        color: black;
        padding: 5px;
        margin: 10px;
    }

    #popupOverlay {
        position: fixed;
        top: 0;
        z-index: 10000;
        width: 100%;
        height: 100%;
        display: none;
        background: rgba(0, 0, 0, 0.6);
    }
   
