    .loader {
        border: 4px solid #f3f3f3;
        border-top: 4px solid #3498db;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        animation: spin 2s linear infinite;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }


@@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

  
</style>


<div id="StakeHolderList">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div id="popupOverlay">
            <div class="loader"></div>
            </div>
            <div class="modal-header">
                <h5 class="modal-title s3">
                    <span class="text-capitalize s3" style="font-size: 18px">
                        Stakeholder's
                    </span>
                </h5>
                <button type="button"
                        class="close cross"
                        data-dismiss="modal">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <div class="well">
                   <div class="row p-b-20">
                        <div class="col-md-6 col-sm-6 col-12">
                            <div class="d-flex justify-content-start align-items-center">
                                <a class="btn btn-info m-r-10" id="viewStakeholderForm">Add</a>
                                &nbsp;&nbsp
                                <button type="button" class="btn btn-primary" id="viewStakeholderFormCSV">UpLoad csv</button>
                            </div>
                        </div>
                   </div>


                  
                    <div class="table-wrap">
                        <div class="table-responsive" style="max-height:360px">
                            <table id="userList" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Stakeholder Name</th>
                                        <th>SPOC @clientName Email</th>
                                        <th>Stakeholder Type</th>
                                        <th style="width:80px">Status</th>
                                        
                                        <th hidden></th>
                                        <th hidden></th>
                                        <th hidden></th>
                                        <th hidden></th>
                                        <th style="width:80px">Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count() > 0)
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.name</td>
                                                <td>@item.spocUgpassEmail</td>
                                                <td>@item.stakeholderType</td>
                                                <td>
                                                    @(item.status ? "Onboarded" : "Not Onboarded")
                                                </td>

                                                <td hidden>@item.referenceId</td>
                                                <td hidden>@item.creationTime</td>
                                                <td hidden>@item.referredBy</td>
                                                <td hidden>@item.onboardingTime</td>
                                                <td class="valigntop">
                                                    @if (string.IsNullOrEmpty(item.organizationUid))
                                                    {
                                                        <a class="btn btn-secondary" tabindex="-1" aria-disabled="true">
                                                            <i class="icon-docs"></i>View
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a class="btn btn-primary" onclick="viewStakeholder('@item.organizationUid', '@item.name')" data-dismiss="modal">
                                                            <i class="icon-docs"></i>View
                                                        </a>

                                                    }
                                                </td>

                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" align="center">No records found</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div id="organizationDiv">
</div>

