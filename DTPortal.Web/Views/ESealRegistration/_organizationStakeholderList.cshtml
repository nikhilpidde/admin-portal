<script>
    var table;
    $(document).ready(function () {

        table = $('#userList').DataTable();
    });

    $(document).ajaxSend(function (event, xhr, options) {

        $('#popupOverlay').show();

    }).ajaxComplete(function (event, xhr, options) {

        $('#popupOverlay').hide();

    }).ajaxError(function (event, jqxhr, settings, exception) {

        $('#popupOverlay').hide();

    });
   
     function viewStakeholder(organizationUid, name) {
         $('#organizationDiv').empty();
        $('#SearchOrganizationName').val(name);
        
         var dataToSend = { organizationUid: organizationUid };
         $.ajax({
            url: '@Url.Action("GetOrganizationById", "ESealRegistration")',
             data: dataToSend,
             type: "GET",
             /*contentType: "json",*/
             error: ajaxErrorHandler,
             beforeSend: function () {
                 $('#overlay').show();
             },
             complete: function () {
                 $('#overlay').hide();
             },
             success: function (data) {
                 if (data != null) {
                    $('#model-addStakeholder').modal('hide');
                     $('#organizationDiv').html(data);
                   
                 } else {
                     swal({ type: 'error', title: "Failed", text: "Organization details not found" });
                 }
             }
         });
     }
</script>

