@model IEnumerable<DTPortal.Core.DTOs.OrganizationPaymentHistoryStatusDTO>
@using DTPortal.Core

<style>
    .modal-dialog {
        max-width: 900px;
    }
</style>

<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title s3">
                <span class="text-capitalize s3" style="font-size: 18px">
                    Payment Details
                </span>
            </h5>
            <button type="button"
                    class="close cross"
                    data-dismiss="modal">
                &times;
            </button>
        </div>
        <div class="modal-body">
            <div class="well">
                <div class="table-wrap">
                    <div class="table-responsive">
                        <table class="table display product-overview mb-30" id="support_table5">
                            <thead>
                                <tr>
                                    <td>Date</td>
                                    <td>Amount</td>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count() > 0)
                                {
                                    @foreach (var item in Model.Select((value, index) => new { Value = value, Index = index }))
                                    {
                                        if (item.Index == 0)
                                        {
                                            <tr>
                                                <td>@item.Value.CreatedOn</td>
                                                <td>@item.Value.TotalAmount</td>
                                                <td>
                                                    <div>
                                                        <input type="radio" id="myRadioButton" checked>
                                                        
                                                      @*  @if (item.Index == 0)
                                                        {
                                                            <input type="radio" id="myRadioButton" @(item.Index == 0 ? "checked" : "")>
                                                        }
                                                        else
                                                        {
                                                            <input type="radio" id="myRadioButton" disabled>
                                                        }*@
                                                    </div>
                                                </td>

                                                <td hidden>@item.Value.OrganizationId</td>
                                                <td id="transactionReferenceId" hidden>@item.Value.TransactionReferenceId</td>
                                                <td hidden>@item.Value.AggregatorAcknowledgementId</td>
                                                <td hidden>@item.Value.EncryptedMobileNumber</td>
                                                <td hidden>@item.Value.EncryptedEmail</td>
                                                <td hidden>@item.Value.SubscriberSuid</td>
                                                <td hidden>@item.Value.PaymentForOrganization</td>
                                                <td hidden>@item.Value.PaymentStatus</td>
                                                <td hidden>@item.Value.PaymentInfo</td>
                                                <td hidden>@item.Value.PaymentChannel</td>
                                                <td hidden>@item.Value.PaymentCategory</td>


                                                @* <td><button class="btn btn-primary" onclick="validatePaymentHistory('@item.TransactionReferenceId')">select</button></td>*@

                                            </tr>
                                        }
                                    }
                                }
                                else
                                {
                                    <tr class="odd gradeX">
                                        <td colspan="6" align="center">No records found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            @if (Model.Any())
            {
                var firstItem = Model.First();
                <button class="btn btn-primary" onclick="validatePaymentHistory('@firstItem.TransactionReferenceId')">Next</button>
            }
            <button class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>