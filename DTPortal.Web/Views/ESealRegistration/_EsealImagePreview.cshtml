<style>
   
    .popup-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .popup-content {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        width: 400px;
        height: 350px;
        text-align: center;
    }

    .preview-container {
        position: relative;
        margin-bottom: 20px;
        height: 250px;
        overflow: hidden;
    }

    .preview-image {
        max-width: 250px;
        max-height: 250px;
        display: block;
        margin: 0 auto;
        border: 2px solid #ccc;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

    .button-container {
        display: flex;
        justify-content: center;
    }

        .button-container button {
            margin: 0 5px;
        }

    .popup-container .close-btn {
        position: relative;
        top: -10px;
        float: right;
        font-weight: bolder;
        font-size: 30px;
        cursor: pointer;
    }

</style>
<div id="esealImagePopup" class="popup-container">
    <div class="popup-content">
        <div class="preview-container">
            <span class="close-btn" id="hideImagePreview">&times;</span>
            <img id="previewImage" class="preview-image">
        </div>
        <div class="button-container">
            <button id="agreeButton" class="btn btn-primary">Approve</button>
            <button id="uploadAgainButton" class="btn btn-secondary">Cancel</button>
        </div>
    </div>
</div>