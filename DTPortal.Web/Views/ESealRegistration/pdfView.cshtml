                    @if (string.IsNullOrEmpty(Model.TaxNo))
                    {
                        <label>NA</label>
                    }
                    else
                    {
                        <label>@Model.TaxNo</label>
                    }
                </td>
            </tr>
            <tr>
                <td>Corporate Office Address</td>
                <td>:</td>
                <td>
                    @Model.CorporateOfficeAddress1, @Model.CorporateOfficeAddress2, @Model.Country, Zipcode: @Model.Pincode
