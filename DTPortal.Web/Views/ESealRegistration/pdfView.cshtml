                        <label class="container">
                            @item.DisplayName
                            <input type="checkbox" checked="@item.IsSelected" />
                            <span class="checkmark"></span>
                        </label>
                        <br />
                    }
                </td>
            </tr>
        </table>
    </div>
    <div style="margin-top:40px">
        <span style="margin-left:20px; margin-top:30px; font-size:20px">I hereby declare the above organization details have been verified by me.</span>
    </div>
    <div align="right" style="margin-right:50px;margin-top:40px">
        <span style="font-size:20px">@Model.UserName</span>
    </div>
</div>






