@model DTPortal.Web.ViewModel.ESealRegistration.StakeholderViewModel
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    var clientName = @Configuration["ProjectName"] as string;
}
<style>
    .modal-dialog {
        max-width: 900px;
    }

    .cross {
        color: black;
        padding: 5px;
        margin: 10px;
    }

    #popupOverlay {
        position: fixed;
        top: 0;
        z-index: 10000;
        width: 100%;
        height: 100%;
        display: none;
        background: rgba(0, 0, 0, 0.6);
    }

    /*.loader {
      border: 4px solid #f3f3f3;
      border-top: 4px solid #3498db;
      border-radius: 50%;
      width: 50px;
      height: 50px;
          margin: auto;
      animation: spin 2s linear infinite;
    }*/

    .loader {
        border: 4px solid #f3f3f3;
        border-top: 4px solid #3498db;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        animation: spin 2s linear infinite;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }


    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>
<div id="addStakeHolder">
<div class="modal-dialog" role="document">
    <div class="modal-content">
            <div id="popupOverlay">
                <div class="loader"></div>
            </div>
        <div class="modal-header">
            <h5 class="modal-title s3">
                <span class="text-capitalize s3" style="font-size: 18px">
                    Add Stakeholder
                </span>
            </h5>
            <button type="button"
                    class="close cross"
                    data-dismiss="modal">
                &times;
            </button>
        </div>
        <div class="modal-body">
            <div class="well">
                <form asp-action="AddStakeHolder" asp-controller="ESealRegistration" id="stakeholderForm" enctype="multipart/form-data">
                   
                    <input asp-for="id" hidden />
                    <input asp-for="organizationUid" hidden />
                    <input asp-for="status" hidden />
                    <input asp-for="onboardingTime" hidden />
                    <input asp-for="referredBy" hidden/>
                    <input asp-for="referenceId" hidden />
                    <input asp-for="creationTime" hidden />
                    <div class="form-group">
                        <label asp-for="name" class="control-label"></label>
                        <input asp-for="name" class="form-control" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="spocUgpassEmail" class="control-label">SPOC @clientName Email</label>
                        <input asp-for="spocUgpassEmail" class="form-control"/>
                        <span asp-validation-for="spocUgpassEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="stakeholderType" class="control-label"></label>
                        <select asp-for="stakeholderType" class="form-control">
                            <option value="VENDOR">VENDOR</option>
                            <option value="MDA">MDA</option>
                        </select>
                        <span asp-validation-for="stakeholderType" class="text-danger"></span>
                    </div>

               </form>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" onclick="addStakeHolder()" data-submit="modal">Save</button>
                <button class="btn btn-secondary" id="redirectToStakeholderList">Close</button>
        </div>
    </div>
</div>
</div>


<script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js" asp-append-version="true"></script>
    <script>

    $(document).ajaxSend(function (event, xhr, options) {

        $('#popupOverlay').show();

    }).ajaxComplete(function (event, xhr, options) {

        $('#popupOverlay').hide();

    }).ajaxError(function (event, jqxhr, settings, exception) {

        $('#popupOverlay').hide();

    });
    function addStakeHolder(){
       
        var form = $("#stakeholderForm");
        var nameInput = form.find("#name");
        var emailInput = form.find("#spocUgpassEmail");
        var validData = true;

        if (nameInput.val() == "") {
            nameInput.siblings(".text-danger").text("Name is required.");
            validData = false;
        } else {
            nameInput.siblings(".text-danger").text(""); // Clear the validation message
        }

        if (emailInput.val() == "") {
            emailInput.siblings(".text-danger").text("Email is required.");
            validData = false;
        } else {
            emailInput.siblings(".text-danger").text(""); // Clear the validation message
        }

        if (!validData) {
            return;
        }

        var url = form.attr("action");
        var stakeholders = [
            {
                name: nameInput.val(),
                spocUgpassEmail: emailInput.val(),
                referenceId: form.find("#referenceId").val(),
                //organizationUid: form.find("#organizationUid").val(),
                //status: form.find("#status").val(),
                //onboardingTime: form.find("#onboardingTime").val(),
                //creationTime: form.find("#creationTime").val(),
                stakeholderType: form.find("#stakeholderType").val()
           }
        ];
            $.ajax({
                type: "POST",
                url: url,
                data: JSON.stringify(stakeholders),
                cache: false,
                contentType: "application/json; charset=utf-8",
                processData: false,
                beforeSend: function () {
                    $('#overlay').show();
                },
                complete: function () {
                    
                    $('#overlay').hide();
                },
                success: function (data) {
                    if (data.status == "Success") {
                        swal({
                            type: 'success',
                            title: "Success",
                            text: data.message
                        }, function (isConfirm) {
                            if (isConfirm) {
                            registeredStakeHolders(stakeHolderOrgUID.referedById)
                            }
                        });
                    }

                    if (data.status == "Failed") {
                        swal({ type: 'error', title: "Error", text: data.message }, function (isConfirm) {
                            if (isConfirm) {
                                $('#viewStakeholderForm').trigger('click');
                            }
                        });
                     
                    }
                }
            });
    };

   
    
    </script>
