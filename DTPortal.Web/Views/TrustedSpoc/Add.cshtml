<div class="row">

    <div class="col-md-12">
        <div class="card-custom">
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="Save">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <div class="form-group">
                                <label class="col-form-label s3"> Spoc Name <span style="color: red;">*</span></label>
                                <input type="text"
                                       id="txtName"
                                       class="form-control"
                                       />
                                <span id="nameError" class="invalid-feedback text-danger">Name must be at least 2 characters</span>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label s3">Spoc Email  <span style="color: red;">*</span></label>
                                <input type="email"
                                       id="txtEmail"
                                       class="form-control"
                                        />
                                <span id="emailError" class="invalid-feedback">Enter a valid Email Address</span> <span class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group col-md-6">
                            <div class="form-group">
                                <label class="col-form-label s3">Mobile Number  <span style="color: red;">*</span></label>

                                <div class="mobile-wrapper">
                                    <select id="ddlCountryCode" class="country-code">
                                        <option data-length="10" value="+91">+91</option>
                                        <option data-length="9" value="+971">+971</option>
                                    </select>

                                    <input type="tel"
                                           id="txtMobile"
                                           class="form-control"
                                            />
                                </div>

                                
                                <span id="mobileError" class="invalid-feedback">
                                    Please enter a valid mobile number
                                </span>
                            </div>
                        </div>

                    </div>
