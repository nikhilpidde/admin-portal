<script>
$(document).ready(function () {

           $('#selfServiceConfigMenu').addClass('active');
            if ($('#sidebar ul li.dropdown.active')) {
                $('#sidebar ul li.dropdown.active ul').addClass('show');
                $('#TrustedSpocMenuItem').addClass('active');
                $('#sidebar ul li.dropdown.active a.nav-link.drop-logo').attr('aria-expanded', 'true');
            }

            $('#homeMenu').addClass('breadcrumb-item').append('Self Service Portal');
            $('#mainMenu').addClass('breadcrumb-item active').append('Trusted User');
            $('#subMenu').addClass('breadcrumb-item active').append('Add');
    
    function updateMobileRules() {
        const selected = $("#ddlCountryCode option:selected");
        const length = selected.data("length");

        $("#txtMobile")
            .attr("maxlength", length)
            .attr("placeholder", length + "-digit mobile number")
            .val("");
    }

    $("#ddlCountryCode").on("change", updateMobileRules);
    updateMobileRules();

     
    $("#txtName").on("input", validateName);
    $("#txtEmail").on("input", validateEmail);

    $("#txtMobile").on("input", function () {
        this.value = this.value.replace(/[^0-9]/g, '');
        validateMobile();
    });


       $("#btnSaveUser").on("click", function () {

        if (!validateForm()) return;

        const payload = {
            name: $("#txtName").val().trim(),
            email: $("#txtEmail").val().trim(),
            mobileNumber: $("#ddlCountryCode").val() + $("#txtMobile").val().trim()
        };

        $("#btnSaveUser").prop("disabled", true).text("Saving");

        $.ajax({
            url: '@Url.Action("AddSpoc", "TrustedSpoc")',
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(payload),

            beforeSend: function () {
                $('#overlay').show();
            },

              success: function (res) {
        if (res.success) {
            swal("Success", res.message || "User added successfully", "success");
            clearForm();
        } else {
            swal("Error", res.message || "Failed to add user", "error");
        }
    },


            error: function () {
                swal("Error", "Failed to add user", "error");
            },

            complete: function () {
                // 🔹 hide loader
                $('#overlay').hide();

                // 🔹 enable button again
                $("#btnSaveUser").prop("disabled", false).text("Save User");
            }
        });
    });


});



function validateName() {
    const val = $("#txtName").val().trim();
    return toggleValidation("#txtName", "#nameError", val.length >= 2);
}

function validateEmail() {
    const email = $("#txtEmail").val().trim();
        const regex = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
    return toggleValidation("#txtEmail", "#emailError", regex.test(email));
}

function validateMobile() {
    const mobile = $("#txtMobile").val().trim();
    const code = $("#ddlCountryCode").val();

    let regex, message;

    if (code === "+91") {
        regex = /^[6-9]\d{9}$/;
        message = "Enter valid 10-digit Indian mobile number";
    } else {
        regex = /^[0-9]{9}$/;
        message = "Enter valid 9-digit UAE mobile number";
    }

    $("#mobileError").text(message);
    return toggleValidation("#txtMobile", "#mobileError", regex.test(mobile));
}

function toggleValidation(input, error, isValid) {
    if (isValid) {
        $(input).removeClass("is-invalid");
        $(error).removeClass("d-block");
    } else {
        $(input).addClass("is-invalid");
        $(error).addClass("d-block");
    }
    return isValid;
}

function validateForm() {
    return validateName() && validateEmail() && validateMobile();
}

function clearForm() {
    $("#txtName, #txtEmail, #txtMobile")
        .val("")
        .removeClass("is-invalid");

    $(".invalid-feedback").removeClass("d-block");
}
</script>
