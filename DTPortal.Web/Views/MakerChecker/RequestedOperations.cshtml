@section scripts{
    <script>

        $(document).ready(function () {

            $('#dashboardMenu').addClass('active');

            /*For Beadcrum Start*/
            $('#homeMenu').addClass('breadcrumb-item').append('Dashboard');
            $('#mainMenu').addClass('breadcrumb-item active').append('Requested Operations');
            $('#subMenu').removeClass('breadcrumb-item');

            //var table = $("#example4").DataTable({
            //    "bLengthChange": false,
            //});

            $(".table").DataTable({
                "bLengthChange": false,
                "aaSorting" : []
            });

            $('#roleTable').on('click', '.js-delete', function () {
                var deleteButton = $(this);
                var data = $('#roleTable').DataTable().row(deleteButton.parents("tr")).data();
                if (data[0] == "Admin" || data[0] == "Admin Checker") {
                    alert('The role ' + data[0] + ' is default role, You cant not delete this role');
                    return false;
                }
                var id = deleteButton.attr("data-id");
                if (confirm("Are you sure you want to delete role with " + id)) {
                    $.ajax({
                        type: 'POST',
                        cache: false,
                        dataType: 'json',
                        url: '@Url.Action("Delete", "RoleManagement")',
                        data: {
                             id: id
                        },
                        success: function () {
                            $("#roleTable").DataTable().row(deleteButton.parents("tr")).remove().draw();
                        },
                        error: function (response) {
                            if (response.statusText == "Unauthorized") {
                                swal({ type: 'info', title: "Session Expired", text: "Click on 'Ok' button for login again!" }, function (isConfirm) {
                                    if (isConfirm) {
                                        window.location.href = '@Url.Action("Index", "Login")'
                                    }
                                });
                            } else {
                                alert('Failed to delete role.');
                            }
                        }
                    });
                }
            });
        });

    </script>
}
