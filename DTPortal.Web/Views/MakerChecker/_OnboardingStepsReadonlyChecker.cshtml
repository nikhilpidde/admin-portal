@model IEnumerable<DTPortal.Core.DTOs.OnboardingStepDTO>

<style>
    .inputWidth {
        width: 95%;
        padding-left: 0px;
    }
</style>

<div class="form-row">
    <label>Onboarding Steps</label>
    <table class="table table-striped table-bordered table-hover table-checkable order-column full-width">
        <thead>
            <tr>
                <th width="22%" class="form-group">Onboarding Step</th>
                <th width="22%" class="form-group">Integration URL</th>
                @*<th width="10%" class="form-group">Threshold</th>*@
                <th width="10%" class="form-group">Andriod TFlite Threshold</th>
                <th width="10%" class="form-group">Andriod DTT Threshold</th>
                <th width="10%" class="form-group">IOS TFlite Threshold</th>
                <th width="10%" class="form-group">IOS DTT Threshold</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var step in Model)
            {
                <tr>
                    <td><input value="@step.OnboardingStep" readonly /></td>
                    <td><input value="@step.IntegrationUrl" readonly /></td>
                    @if (step.OnboardingStepId == 1)
                    {
                        @*<td><input max='50' value="@step.OnboardingStepThreshold" class="inputWidth" readonly /></td>*@
                        <td><input max='50' value="@step.AndriodTFliteThreshold" class="inputWidth" readonly /></td>
                        <td><input max='50' value="@step.AndriodDTTThreshold" class="inputWidth" readonly /></td>
                        <td><input max='50' value="@step.IosTFliteThreshold" class="inputWidth" readonly /></td>
                        <td><input max='50' value="@step.IosDTTThreshold" class="inputWidth" readonly /></td>
                    }
                    else
                    {
                        @*<td></td>*@
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>