             $('#adminSubmenu').addClass('show');
         $('#AccessFilterSubmenu').addClass('show');

             $("li#administrationSidebarElement a:first").attr('aria-expanded', 'true');
         $("li#AccessFilterSidebarElement a:first").attr('aria-expanded', 'true');


         /*For Beadcrum Start*/
         $('#homeMenu').addClass('breadcrumb-item').append('Administration');
            $('#mainMenu').addClass('breadcrumb-item active').append('AccessFilter > IPAddress Filter > New');
            $('#subMenu').removeClass('breadcrumb-item');

            @*var isCheker = "@User.IsInRole("Users Checker")";
            if (isCheker == "True") {
                $('form *').prop('disabled', true);

            }*@


            $("#IpAddress").change(function () {
                ipvalidate();
            });

            $("input[name='IpType']").change(function () {
                var IpType = $("input[name='IpType']:checked").val();
                if (IpType == "SINGLE_IP") {
                    $('#info').html("Add IP Address With Comma(,) seperated");
                } else {
                    $('#info').html("Add IPMask in specific format (Ex :- 255.255.255.255 ; 255.255.255.255) with Comma(,) seperated");
                }
                ipvalidate();
            });

        });

        function validateIP() {
            var IpAddress = $("#IpAddress").val();
            if (IpAddress == "") {
                $("#Ipform").submit();
                return true;
            }
            if (ipvalidate()) {
                var f = $("#Ipform");
                f.submit();
                return true;
            } else
                return false;
        }

        function ipvalidate() {
            var IpAddress = $("#IpAddress").val();
            if (IpAddress == undefined)
                return true;

            var IpType = $("input[name='IpType']:checked").val();
            var IpList = IpAddress.split(",");
            var ipformat = /^(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$/;
            var ipRangFormat = /^(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\;(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$/;
            var specificField = $('#ipAddress-errors');
            var isValid = true;
            if (IpType == "SINGLE_IP") {
                for (var i in IpList) {
                    if (IpList[i].match(ipformat)) {
                        specificField.html("");
                        specificField.css("display", "none");
                    } else {
                        specificField.css("display", "block");
                        specificField.html("invalid IP address");
                        isValid = false;
                        break;
                    }
                }
                if (isValid)
                    return true;
                else
                    return false;
            }
            else {
                for (var i in IpList) {
                    if (IpList[i].match(ipRangFormat)) {
                        specificField.html("");
                        specificField.css("display", "none");

                    } else {
                        specificField.css("display", "block");
                        specificField.html("Invalid IP address");
                        isValid = false;
                        break;
                    }
                }
                if (isValid)
                    return true;
                else
                    return false;
            }
        }
    </script>

